<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    android:orientation="vertical"
    tools:context=".ui.onboard.ThirdOnBoardScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <TextView
            android:id="@+id/PickYourPathText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/pick_your_path"
            android:textAlignment="center"
            android:textColor="@color/yellow_white_light_200"
            android:textSize="54sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/beginner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/beginner"
            android:textColor="@color/brown"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.891"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PickYourPathText" />

        <TextView
            android:id="@+id/intermediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="180dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/intermediate"
            android:textColor="@color/brown"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <TextView
            android:id="@+id/pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="120dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/or_pro"
            android:textColor="@color/brown"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <TextView
            android:id="@+id/tipsText"
            android:layout_width="211dp"
            android:layout_height="94dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/select_your_level_choose_your_focus_and_let_s_boost_your_game_your_journey_your_pace"
            android:textColor="@color/orange"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/pro"
            app:layout_constraintTop_toBottomOf="@+id/pro" />

        <ImageView

            android:id="@+id/imageView4"
            android:layout_width="315dp"
            android:layout_height="310dp"
            android:layout_marginEnd="172dp"
            android:src="@drawable/volley_player_wob_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PickYourPathText" />

        <ImageView

            android:id="@+id/imageView8"
            android:layout_width="315dp"
            android:layout_height="310dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/volley_player_wob_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beginner" />

        <ImageView

            android:layout_width="315dp"
            android:layout_height="310dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="160dp"
            android:src="@drawable/volley_player_wob_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/intermediate" />

        <ImageView
            android:id="@+id/nextPage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/arrow_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.97" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>