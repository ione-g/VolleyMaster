<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingEnd="24dp"
    android:paddingVertical="2dp"
    tools:ignore="RtlSymmetry">

    <androidx.cardview.widget.CardView
        android:layout_width="279dp"
        android:layout_height="220dp"
        app:cardCornerRadius="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/trainingIV"
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:scaleType="centerCrop"
                android:src="@drawable/training_default" />

            <TextView
                android:id="@+id/trainingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trainingIV"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_toStartOf="@+id/trainingGo"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/training_name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/trainingDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trainingName"
                android:layout_alignEnd="@+id/trainingName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/training_desc"
                android:textColor="@color/black_75_op"
                android:textSize="10sp" />

            <Button
                android:id="@+id/trainingGo"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_below="@+id/trainingIV"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/play_yellow" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>