<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    tools:context=".ui.home.playerstats.collecting.PSGenderFragment">


    <ProgressBar
        android:id="@+id/playerStatsCollectingProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="7"
        android:progress="1"
        android:progressDrawable="@drawable/vm_p_s_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-3dp"
        android:elevation="10dp"
        android:fontFamily="@font/inter_semibold"
        android:shadowColor="@color/yellow_30_op"
        android:shadowDy="10"
        android:shadowRadius="3"
        android:text="@string/_1div7"
        android:textColor="@color/yellow"
        app:layout_constraintStart_toEndOf="@+id/playerStatsCollectingProgress"
        app:layout_constraintTop_toTopOf="@+id/playerStatsCollectingProgress" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/tell_us_about_yourself"
        android:textColor="@color/yellow"

        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerStatsCollectingProgress" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/to_give_you_a_better_experience_we_need_to_know_your_gender"
        android:textAlignment="center"
        android:textColor="@color/yellow_30_op"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/maleRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/vm_p_s_radio_button"
                android:button="@null"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/maleTV1"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/maleRadioBtn"
                android:layout_alignTop="@+id/maleRadioBtn"
                android:layout_alignEnd="@+id/maleRadioBtn"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/male"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/maleTV2"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maleTV1"
                android:layout_alignStart="@+id/maleRadioBtn"
                android:layout_alignEnd="@+id/maleRadioBtn"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/you_are_planing_to_use_our_platform_as_male"
                android:textAlignment="center"
                android:textColor="@color/yellow_50_op"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/maleImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/maleRadioBtn"
                android:layout_alignTop="@+id/maleRadioBtn"
                android:layout_alignEnd="@+id/maleRadioBtn"
                android:layout_marginStart="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="46dp"
                android:src="@drawable/vm_p_s_male" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <RadioButton
                android:id="@+id/femaleRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:background="@drawable/vm_p_s_radio_button"
                android:button="@null"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/femaleTV1"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/femaleRadioBtn"
                android:layout_alignTop="@+id/femaleRadioBtn"
                android:layout_alignEnd="@+id/femaleRadioBtn"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/female"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/femaleTV2"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/femaleTV1"
                android:layout_alignStart="@+id/femaleRadioBtn"
                android:layout_alignEnd="@+id/femaleRadioBtn"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/you_are_planing_to_use_our_platform_as_female"
                android:textAlignment="center"
                android:textColor="@color/yellow_50_op"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/femaleImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/femaleRadioBtn"
                android:layout_alignTop="@+id/femaleRadioBtn"
                android:layout_alignEnd="@+id/femaleRadioBtn"
                android:layout_marginStart="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="46dp"
                android:src="@drawable/vm_p_s_female" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <RadioButton
                android:id="@+id/otherRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/vm_p_s_radio_button"
                android:button="@null"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/otherTV1"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/otherRadioBtn"
                android:layout_alignTop="@+id/otherRadioBtn"
                android:layout_alignEnd="@+id/otherRadioBtn"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/other"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/otherTV2"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/otherTV1"
                android:layout_alignStart="@+id/otherRadioBtn"
                android:layout_alignEnd="@+id/otherRadioBtn"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/you_are_planing_to_use_our_platform_as_other"
                android:textAlignment="center"
                android:textColor="@color/yellow_50_op"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/otherImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/otherRadioBtn"
                android:layout_alignTop="@+id/otherRadioBtn"
                android:layout_alignEnd="@+id/otherRadioBtn"
                android:layout_marginStart="45dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="46dp"
                android:src="@drawable/vm_p_s_other" />


        </RelativeLayout>

    </RadioGroup>

    <Button
        android:id="@+id/next"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_shape"
        android:elevation="0dp"
        android:visibility="invisible"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>