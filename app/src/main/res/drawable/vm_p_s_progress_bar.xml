<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background"
        >
        <layer-list>
            <item android:right="5dp" android:top="5dp" android:left="5dp" android:bottom="5dp">
                <shape android:shape="rectangle">
                    <stroke android:color="@color/yellow_30_op"/>  <!-- Gray shadow -->
                    <corners android:radius="20dp"/>  <!-- Optional: Rounded corners for shadow -->
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <stroke android:color="@color/yellow"
                        android:width="1dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:id="@+id/progress">
        <scale android:scaleWidth="100%">
            <layer-list>
                <item
                    android:drawable="@drawable/button_shape"/>
            </layer-list>
        </scale>
    </item>
</layer-list>